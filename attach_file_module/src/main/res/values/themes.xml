<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.AttachFileModule" parent="Theme.MaterialComponents.DayNight">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white_light</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black_light</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->

        <item name="white">@color/white_light</item>
        <item name="whiteTransparent">@color/whiteTransparent_light</item>
        <item name="black">@color/black_light</item>
        <item name="green">@color/green_light</item>
        <item name="blue">@color/blue_light</item>
        <item name="gray">@color/gray_light</item>
        <item name="orange">@color/orange_light</item>
        <item name="purple">@color/purple_light</item>
        <item name="red">@color/red_light</item>
        <item name="transparent">@color/transparent_light</item>

        <item name="bottomSheetTransparent">@color/bottomSheetTransparent_light</item>

    </style>
</resources>